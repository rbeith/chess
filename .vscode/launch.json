	"version": "0.2.0",
	"configurations": [
		{
			"name": "RSpec - active spec file only",
			"type": "Ruby",
			"request": "launch",
			"program": "/home/magnus/.rbenv/versions/3.0.3/bin/rspec",
			"args": [
				"-I",
				"${workspaceRoot}",
				"${file}"
			]
		},
		{
			"name": "Debug Local File",
			"type": "Ruby",
			"request": "launch",
			"program": "${workspaceRoot}/lib/main.rb"
		},
		{
			"name": "Listen for rdebug-ide",
			"type": "Ruby",
			"request": "attach",
			"remoteHost": "127.0.0.1",
			"remotePort": "1234",
			"remoteWorkspaceRoot": "${workspaceRoot}"
		},
		{
			"name": "RSpec - all",
			"type": "Ruby",
			"request": "launch",
			"cwd": "${workspaceRoot}",
			"program": "/home/magnus/.rbenv/versions/3.0.3/bin/rspec",
			"args": [
				"-I",
				"${workspaceRoot}"
			]
		},
		{
			"type": "rdbg",
			"name": "Debug current file with rdbg",
			"request": "launch",
			"script": "${file}",
			"args": [],
			"askParameters": true
		},
		{
			"type": "rdbg",
			"name": "Attach with rdbg",
			"request": "attach"
		}
	]
}